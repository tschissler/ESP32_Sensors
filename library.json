{
  "name": "Sensors",
  "version": "0.1.0",
  "description": "Shared sensor drivers and helpers for ESP32 projects.",
  "frameworks": ["arduino"],
  "platforms": ["espressif32"],
  "dependencies": {
    "adafruit/DHT sensor library": "*",
    "paulstoffregen/OneWire": "*",
    "sensirion/Sensirion I2C SHT4x": "*"
  },
  "build": {
    "flags": [
      "-I DhtSensor/include",
      "-I DS18B20Sensor/include",
      "-I SensorBase/include",
      "-I Sht45Sensor/include"
    ],
    "srcFilter": [
      "+<DhtSensor/src/>",
      "+<DS18B20Sensor/src/>",
      "+<Sht45Sensor/src/>"
    ]
  }
}
